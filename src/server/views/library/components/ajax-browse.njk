{% extends 'layouts/library.layout.njk' %}

{% set pageTitle = 'MOT Library - Ajax Browse' %}

{% block content %}

  {{ components.heading(text='Ajax Browse', tag='h2', size='medium') }}

  {{ components.paragraph(text='This component is still under development.', lead=true) }}

  {% call components.displayCode() %}
  <div class="ajax-browse ajax-browse--one-block">
    {{ components.placeholderAjaxBrowse(active=true) }}
  </div>
  {%- endcall %}

  {% call components.displayCode() %}
  <div class="ajax-browse ajax-browse--two-blocks">
    {{ components.placeholderAjaxBrowse(active=false) }}
    {{ components.placeholderAjaxBrowse(active=true) }}
  </div>
  {%- endcall %}

  {% call components.displayCode() %}
  <div class="ajax-browse ajax-browse--three-blocks">
    {{ components.placeholderAjaxBrowse(active=false) }}
    {{ components.placeholderAjaxBrowse(active=false) }}
    {{ components.placeholderAjaxBrowse(active=true) }}
  </div>
  {%- endcall %}

{% endblock %}