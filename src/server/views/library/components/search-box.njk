{% extends 'layouts/library.layout.njk' %}

{% set pageTitle = 'GDS Library - Search box' %}

{% block content %}

    {{ components.heading(text='Search box', tag='h2', size='medium') }}

    <p>
        <a href="https://github.com/Civil-Service-Human-Resources/lpg-front-end/blob/master/src/assets/scss/modules/search-box/_search-box.scss">_search-box.scss</a>
    </p>

    {% call components.displayCode() %}
        <div class="search-box">

            <form name="searchLearning" method="POST" action="/prototypes/learner/v3/search">

                <div class="form-group search-box__group u-space-b">

                    <label class="visuallyhidden">Search all available learning</label>

                    <input class="form-control search-box__input" id="searchInput" type="search" name="searchInput" value="" placeholder="Search CSL">

                    <button type="submit" class="search-box__submit">Search</button>

                </div>

            </form>

        </div>

    {%- endcall %}

{% endblock %}
