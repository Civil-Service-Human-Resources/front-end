{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Odometer Panel' %}

{% block content %}

  {{ components.heading(
    text='Default',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel">
    <div class="clear-float">
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Odometer</h3>
      </div>

      <div class="action-panel__container">
        <h3 class="action-panel__value"></h3>
      </div>

      <div class="action-panel__container--last">
        <a href="/rfr/browser" class="button">Add reading</a>
      </div>
    </div>
  </div>
  {%- endcall %}

  {{ components.heading(
    text='With data',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel">
    <div class="clear-float">
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Odometer</h3>
      </div>
      
      <div class="action-panel__container">
        <h3 class="action-panel__value">142,101 miles</h3>
        <span class="action-panel__meta">This is lower than the last test</span>
      </div>

      <div class="action-panel__container--last">
        <a href="/rfr/browser" class="button">Edit reading</a>
      </div>
    </div>
  </div>
  {%- endcall %}

{% endblock %}