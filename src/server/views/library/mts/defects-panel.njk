{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Defects Panel' %}

{% block content %}

  {{ components.heading(
    text='Default',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel">
    <div class="clear-float">
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Defects</h3>
      </div>

      <div class="action-panel__container--last">
        <a href="/rfr/browser" class="button">Add a defect</a>
      </div>
    </div>
  </div>
  {%- endcall %}

  {{ components.heading(
    text='With data',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel">
    <div class="clear-float">
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Defects</h3>
      </div>

      <div class="action-panel__container--last">
        <a href="/rfr/browser" class="button">Add a defect</a>
      </div>
    </div>
  </div>

  <!-- defects-summary -->
  <div class="defect-summary">
    <div id="" class=" ">
      <h3 class="defect-summary__heading">
        <span class="badge--alert">3</span>
        <span class="defect-summary__heading-type">Failures</span>
      </h3>

      <ol>
        <li class="defect ">
          <strong class="defect__is-dangerous" aria-hidden="true">Dangerous failure</strong>

          <strong class="defect__title">Tyre pressure monitoring system inoperative</strong>

          <p class="defect__meta">Showing no fault when tyres are flat.</p>

          <strong class="visuallyhidden">Dangerous failure</strong>

          <h4 class="visuallyhidden">Position</h4>

          <ul class="defect__positions">
            <li>Location not recorded</li>
          </ul>

          <h4 class="visuallyhidden">Actions</h4>

          <ul class="defect__edit">
            <li> <a href="#" class="">Edit</a></li>
            <li>or <a href="#" class="">Remove</a></li>
          </ul>
        </li>
        
        <li class="defect ">
          <strong class="defect__is-dangerous" aria-hidden="true">Major failure</strong>

          <strong class="defect__title">Torsion bar deteriorated by corrosion so that its cross sectional area is reduced and seriously weakened</strong>

          <p class="defect__meta">Will fall off shortly</p>

          <strong class="visuallyhidden">Major failure</strong>
          
          <h4 class="visuallyhidden">Position</h4>

          <ul class="defect__positions">
            <li>Lateral: <span class="defect__property-list-value">Nearside</span></li>
            <li>Longitudinal: <span class="defect__property-list-value">Front</span></li>
            <li>Vertical: <span class="defect__property-list-value">N/A</span></li>
          </ul>

          <h4 class="visuallyhidden">Actions</h4>
          <ul class="defect__edit">
            <li> <a href="#" class="">Edit</a></li>
            <li>or <a href="#" class="">Remove</a></li>
          </ul>
        </li>

        <li class="defect ">
          <strong class="defect__is-dangerous" aria-hidden="true">Dangerous failure</strong>

          <strong class="defect__title">Drivers door hinge erroded</strong>

          <p class="defect__meta">Driver&#39;s door unable to be secured</p>
          
          <strong class="visuallyhidden">Dangerous failure</strong>

          <h4 class="visuallyhidden">Position</h4>

          <ul class="defect__positions">
            <li>Lateral: <span class="defect__property-list-value">Nearside</span></li>
            <li>Longitudinal: <span class="defect__property-list-value">Front</span></li>
            <li>Vertical: <span class="defect__property-list-value">N/A</span></li>
