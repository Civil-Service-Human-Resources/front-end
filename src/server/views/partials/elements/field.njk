{% from "partials/elements/label.njk" import formLabel %}

{% macro field(label='', labelBold=false, id='', type='text', name='', hint=false, group=false, error=false, width=false) %}
  
  {% if width == 12.5 %}
    {% set widthClass = 'form-control-1-8' %}
  {% elif width == 25 %}
    {% set widthClass = 'form-control-1-4' %}
  {% elif width == 33 %}
    {% set widthClass = 'form-control-1-3' %}
  {% elif width == 50 %}
    {% set widthClass = 'form-control-1-2' %}
  {% elif width == 66 %}
    {% set widthClass = 'form-control-2-3' %}
  {% elif width == 75 %}
    {% set widthClass = 'form-control-3-4' %}
  {% else %}
    {% set widthClass = false %}
  {% endif %}
  
  {% if label %}
    {% if group or error %}<div class="form-group {{ 'form-group-error' if error }}">{% endif %}
    {{ formLabel(label=label, id=id, bold=labelBold, hint=hint, error=error) }}
    <input {{ 'class="form-control' + ( ' form-control-error' if error ) + ( ' ' + widthClass if widthClass ) + '"' if type !== 'file' }} {{ 'id="' + id + '"' if id }} type="{{ type }}" name="{{ name if name else id }}">
    {% if group or error %}</div>{% endif %}
  {% endif %}
{% endmacro %}
