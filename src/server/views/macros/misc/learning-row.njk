{% from "macros/typography/headings.njk" import heading %}
{% macro learningRow(name='This learning title',headingURL='', headingTag='h3', description='', headingSize='', headingExtraClass='heading--text', type='', status='', action='', duration='', cost='', workArea='', extraModifierClass='') %}
    <div class="learning__item u-clearfix {% if extraModifierClass %}learning__item--{{ extraModifierClass }}{% endif %}">

        <div class="learning__main">
            {% if headingURL %}<a href="{{ headingURL }}">{% endif %}
                {{ heading(text=name, tag=headingTag, size=headingSize, extraClass=headingExtraClass) }}
            {% if headingURL %}</a>{% endif %}
        </div>

        {% if description %}
        <div class="learning__info">
            {{ description }}
        </div>
        {% endif %}

        <div class="learning__properties">
            <ul class="learning__property">
                {% if type %}
                    <li class="learning__property-item">
                        <span class="visuallyhidden">Type:</span>
                        {{ type }}
                    </li>
                {% endif %}
                {% if duration %}
                    <li class="learning__property-item">
                        <span class="visuallyhidden">Duration:</span>
                        {{ duration}}
                    </li>
                {% endif %}
                {% if cost %}
                    <li class="learning__property-item">
                        <span class="visuallyhidden">Cost:</span>
                        {{ cost }}
                    </li>
                {% endif %}
            </ul>
        </div>

        {% if workArea %}
            <div class="learning__area">Work area: {{ workArea }}</div>
        {% endif %}

        {%  if status %}
            <div class="learning__status"><span class="badge badge--info ">{{ status }}</span></div>
        {% endif %}

        <div class="learning__action">
            {% if action == 'Retake' %}
                <a href="#">Retake <span class="visuallyhidden"> this module</span></a>
            {% endif %}
            {% if action == 'Start' %}
                <a href="#">Start <span class="visuallyhidden"> this module</span></a>
            {% endif %}
            {% if action == 'Resume' %}
                <a href="#">Resume <span class="visuallyhidden"> this module</span></a>
            {% endif %}
        </div>

    </div>
{% endmacro %}
