{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Prototypes Index' %}

{% block content %}

    {{ components.pageHeading('Learner journey', 'LPG Front-End') }}

    {% call components.gridRow() %}

        {% call components.columnTwoThirds() %}

            {{ components.heading(text='Config optons for learner journey', tag='h2', size='medium') }}

            {% if configError %}

                <div class="error-summary" role="alert" aria-labelledby="nameErrors" tabindex="-1">
                    <h2 class="heading-medium error-summary-heading" id="nameErrors">There was a problem with your email address</h2>
                    <ul class="error-summary-list">
                        <li><a href="#config1">Pick one option from below to continue</a></li>
                    </ul>
                </div>

            {% endif %}

            {% call components.formElement(name='registrtionConfig', method='POST', action="#") %}

                <p>Basic user journey for <lear></lear>ners with ability to register a new account.</p>

                <p>
                    If you want to get rid of everything and start again, then <a href="/prototypes/learner/v1/registration?clearSession=true">clear previous session</a>.
                </p>

                <fieldset class="u-space-b30 {% if configError %} form-group-error {% endif %}">

                    <div class="multiple-choice">
                        <input id="config1" type="radio" name="regConfig" value="all">
                        <label for="config1">Show all the stars everywhere</label>
                    </div>

                    <div class="multiple-choice">
                        <input id="config3" type="radio" name="regConfig" value="detail">
                        <label for="config3">Show stars only on course detail page</label>
                    </div>

                    <div class="multiple-choice">
                        <input id="config2" type="radio" name="regConfig" value="none">
                        <label for="config2">Hide all the stars</label>
                    </div>

                </fieldset>

                {% call components.formGroup() %}

                    {{ components.button(text='Start registration journey', group=true)}}

                {%- endcall %}

                <p>
                    <a href="/prototypes/learner/v1">Cancel</a>
                </p>

            {%- endcall %}


        {%- endcall %}

    {%- endcall %}

{% endblock %}