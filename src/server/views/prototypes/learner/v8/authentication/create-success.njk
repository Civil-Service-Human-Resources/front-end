{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Password reset complete - Learning Platform for Government' %}

{% set blackBarTitle = 'Learning Platform for Government' %} {% set learnerPrototypeVersion = 'v8' %}
{% set loggedOut = 'true' %}
{% set signOutPath = '/prototypes/learner/v8/' %}
{% set homePath = '/prototypes/learner/v8/' %}

{% block content %}

    <div class="govuk-box-highlight">
        <h1 class="heading-xlarge">Password creation complete</h1>
        <p class="font-medium">Your new password has been created</p>
    </div>

    {% call components.gridRow() %}

        {% call components.columnTwoThirds() %}

