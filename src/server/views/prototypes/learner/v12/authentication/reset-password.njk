{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Reset password - Learning Platform for Government' %}
{% set blackBarTitle = 'Learning Platform for Government' %}
{% set learnerPrototypeVersion = 'v12' %}
{% set homePath = '/prototypes/learner/v12/' %}
{% set loggedOut = 'true' %}
{% set emailError = emailError if emailError %}

{% block content %}

    {{ components.pageHeading('Enter your email', 'Reset your password') }}

    {% call components.gridRow() %}

        {% call components.columnTwoThirds() %}

            {% if emailError %}

                {% set emailErrorHint = 'Enter a valid email' %}

                <div class="error-summary" role="alert" aria-labelledby="nameErrors" tabindex="-1">
                    <h2 class="heading-medium error-summary-heading" id="nameErrors">There was a problem with your input</h2>
                    <ul>
                        <li>The email address is invalid</li>
                    </ul>
                </div>

            {% endif %}

            {% call components.formElement(name='signIn', method='POST', action='#') %}

                {{ components.field(label='Email address', id='email', hint="", group=true, error=emailErrorHint)}}

                {% call components.formGroup() %}

                    {{ components.button(text='Continue', group=true)}}

                {%- endcall %}

                <p><a href="/prototypes/learner/v12">Cancel</a></p>

            {%- endcall %}

        {%- endcall %}

    {%- endcall %}

{% endblock %}