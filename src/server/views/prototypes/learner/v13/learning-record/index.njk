                <tr>
                    <td><a href="#">Commercial awareness</a></td>
                    <td>Online</td>
                    <td>2 hours 30 minutes</td>
                    <td>21 Mar 2017</td>
                </tr>
                </tbody>
            </table>

        {%- endcall %}

    {%- endcall %}

{% endblock %}
