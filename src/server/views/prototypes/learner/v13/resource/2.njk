            <p>
                <a href="/prototypes/learner/v13/actions?action=addedToLearningPlan&type=blog">Add to your learning</a>
            </p>

        {%- endcall %}

        {% call components.columnOneThird() %}

            <aside class="govuk-related-items govuk-related-items--flush govuk-related-items--keylined" role="complementary">
                <p class="u-space-t15">
                    <a href="#">Leave feedback</a>
                </p>

                {% if not hideDetailStars %}
                    <h2 class="heading-small">User rating</h2>
                    {{ components.starRating(rating='76%', total='104') }}

                {% endif %}

            </aside>

        {% endcall %}

    {%- endcall %}

{% endblock %}
