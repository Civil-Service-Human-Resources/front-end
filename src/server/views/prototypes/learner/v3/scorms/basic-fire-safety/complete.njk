{% set trainingEndDate = trainingEndDate if trainingEndDate %}

{% block content %}

    <div class="govuk-box-highlight">
        <h1 class="heading-xlarge">Online course complete</h1>
        <h2 class="heading-large">Basic fire safety</h2>
        <h3 class="heading-medium">Completed {% if trainingEndDate %}{{ trainingEndDate }}{% else %}8 Mar 2018{% endif %}</h3>
