#!/bin/bash

DIR_BUILDER='./src/js/builder/'
EXT_JS='.js'

function usage() {
    echo "usage ${0} {NameOfBuilder}"
    echo "This script creates a skeleton js builder."
}

function skeleton() {
cat > ${2} <<End-of-message
var ${1} = function () {
};

${1}.prototype.build = function build() {
    return {
        name: 'auto-generated',
        items: []
    }
};

module.exports = new ${1}();
End-of-message
}

if [ $# -eq 0 ]
  then
      usage;
      exit
fi

filename=${DIR_BUILDER}${1}${EXT_JS}

echo "building${1}... "

skeleton $1 $filename

echo "built"

